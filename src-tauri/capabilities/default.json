{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "desktop*",
    "panel",
    "menu",
    "control_center",
    "applet_bluetooth",
    "applet_network",
    "applet_audio",
    "app_terminal",
    "app_config",
    "app_search",
    "app_file_manager*"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "open",
          "cmd": "/usr/bin/xdg-open",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "opener:default",
    "opener:allow-open-path",
    "core:image:default",
    "core:path:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-open",
    "fs:allow-read-file",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$HOME/.config/**"
      ]
    },
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-set-position",
    "core:window:allow-set-size",
    "core:window:allow-set-max-size",
    "core:window:allow-set-min-size",
    "core:window:allow-close",
    "core:window:allow-toggle-maximize",
    "core:window:allow-minimize",
    "positioner:allow-move-window",
    "positioner:allow-set-tray-icon-state",
    "vicons:default",
    "config-manager:default",
    "user-data:default",
    "network-manager:allow-get-network-state",
    "network-manager:allow-toggle-network-state",
    "network-manager:allow-list-wifi-networks",
    "network-manager:allow-get-wireless-enabled",
    "network-manager:allow-set-wireless-enabled",
    "network-manager:allow-is-wireless-available",
    "bluetooth-manager:allow-list-adapters",
    "bluetooth-manager:allow-list-devices",
    "bluetooth-manager:allow-set-adapter-powered",
    "bluetooth-manager:allow-bluetooth-plugin-status",
    "bluetooth-manager:allow-start-scan",
    "bluetooth-manager:allow-stop-scan",
    "bluetooth-manager:allow-connect-device",
    "bluetooth-manager:allow-get-device-info"
  ]
}