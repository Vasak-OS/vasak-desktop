{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vasak-desktop",
  "version": "0.1.0",
  "identifier": "ar.net.vasak.vasak-desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Vasak Panel",
        "url": "index.html#/panel",
        "label": "panel",
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}