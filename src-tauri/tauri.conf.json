{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vasak-desktop",
  "version": "0.5.2",
  "identifier": "ar.net.vasak.vasak-desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "enableGTKAppId": true,
    "windows": [
      {
        "title": "Vasak Panel",
        "url": "index.html#/panel",
        "label": "panel",
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      },
      {
        "title": "Vasak Desktop",
        "url": "index.html#/desktop",
        "label": "desktop",
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnBottom": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "$HOME/**",
          "/usr/share/**",
          "/run/media/**",
          "/mnt/**"
        ],
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "deb",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}